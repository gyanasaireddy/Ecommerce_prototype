<%- include("../partials/header")%>
<div class="container">
  <div class="jumbotron">
    <h1>Welcome to Yelpcamp!!</h1>
    <p>View our hand-picked campgrounds from all over the world</p>
    <a href="/campgrounds/new" class="btn btn-primary btn-md">Add new campgrounds</a>
  </div>

  <div class="row ">
    <%grounds.forEach(function(event){%>
      <div class="col-lg-4 mb-5">
          <div class="card " style="width: 18rem;">
            <img src="<%=event.image%>" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title text-center"><%= event.name%></h5>
              <a href="/campgrounds/<%=event.id%>" class="btn btn-primary d-flex justify-content-center">View More</a>
            </div>
          </div>
      </div>
    <%})%>
  </div>
</div>

<%- include("../partials/footer")%>
